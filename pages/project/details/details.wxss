/* xiangqing.wxss */

page {
  background-color: #f7f7f7;
  overflow-x:none
  ;
}

.top_bg {
  width: 100%;
  height: 322rpx;
}

.top {
  position: absolute;
  left: 0;
  top: 16rpx;
  width: 100%;
  height: 140rpx;
  display: flex;
}

.xm-image {
  width: 140rpx;
  height: 140rpx;
  margin: 0px 16rpx auto 16rpx;
}

.xm-info {
  width: auto;
  height: 140rpx;
  flex: 1;
}

.xm-info-name {
  width: 150px;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 400;
  font-size: 12pt;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.xm-info-other {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 10pt;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.xm-piao {
  min-width: 120rpx;
  height: 140rpx;
  margin: 0px 0rpx auto 16rpx;
}

.xm-piao-number {
  min-width: 100rpx;
  height: 50rpx;
  margin-top: 10rpx;
  background-color: #fff;
  color: #09bb07;
  line-height: 50rpx;
  text-align: right;
  font-size: 10pt;
  padding-left:10rpx;
  border-top:1px solid #09bb07;
  border-bottom:1px solid #09bb07;
  border-left: 1px solid #09bb07;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
}
.xm-piao-flag1{
  float:right;
  width:30rpx;
  height:30rpx;
  margin-top:9rpx;
  margin-left:10rpx;
  margin-right:10rpx;
}
.xm-piao-flag2{
  float:right;
  width:30rpx;
  height:30rpx;
  margin-top:9rpx;
  margin-left:10rpx;
  margin-right:10rpx;
}
.xm-piao-flag3{
  float:right;
  width:26rpx;
  height:30rpx;
  margin-top:9rpx;
  margin-left:10rpx;
  margin-right:10rpx;
}
.xm-piao-button {
  width: 100%;
  height: 60rpx;
  margin-top: 16rpx;
  display: flex;
  justify-content: center;
}

.xm-piao-change1 {
  width: 52rpx;
  height: 52rpx;
  border: 2px solid White;
  background-color: #09bb07;
  border-radius: 26px;
  text-align: center;
  line-height: 53rpx;
  font-size: 9pt;
  color:white;
}
.xm-piao-change2 {
  width: 52rpx;
  height: 52rpx;
  border: 2px solid White;
  background-color: #fe6b5b;
  border-radius: 26px;
  text-align: center;
  line-height: 53rpx;
  font-size: 9pt;
  color:white;
}
.xm-piao-change3 {
  width: 52rpx;
  height: 52rpx;
  border: 2px solid White;
  background-color: #d0d0d0;
  border-radius: 26px;
  text-align: center;
  line-height: 53rpx;
  font-size: 9pt;
  color:white;
}
.middle {
  position: absolute;
  left: 0;
  top: 170rpx;
  width: 100%;
  height: 140rpx;
  margin-top: 10rpx;
}

.middle-box {
  height: 140rpx;
  margin: 0rpx 16rpx 0rpx 16rpx;
  border-top: 1px solid #f0f0f0;
  border-left: 0px solid #f0f0f0;
  border-right: 0px solid #f0f0f0;
  border-bottom: 1px dashed #f0f0f0;
  background-color: white;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  display: flex;
}

.middle-box-item, .bottom-box-item {
  height: 140rpx;
  flex: 1;
}
.middle-box-item:active,.bottom-box-item:active{
  background-color:#f0f0f0;
}
.middle-item-top, .bottom-item-top {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 11pt;
  color: #98c396;
  text-align: center;
}

.middle-item-bottom, .bottom-item-bottom {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 10pt;
  color: #888;
  text-align: center;
}

.bottom {
  width: 100%;
  height: 140rpx;
  margin-top: -10rpx;
}

.bottom-box {
  height: 140rpx;
  margin: 0rpx 16rpx 0rpx 16rpx;
  border-left: 0px solid #f0f0f0;
  border-right: 0px solid #f0f0f0;
  border-bottom: 0px solid #f0f0f0;
  background-color: white;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  display: flex;
}

.title {
  float:left;
  width: 100%;
  height: auto;
  background-color:#f7f7f7;
}

.title-name {
  float: left;
  height: auto;
  font-size: 11pt;
  color: #888;
  margin: 30rpx 16rpx 16rpx 16rpx;
}

.title-right {
  float: right;
  font-size: 11pt;
  color: #98c396;
  margin: 30rpx 16rpx 16rpx 16rpx;
}

.content1 {
  width: 100%;
  min-height: 180rpx;
  display: flex;
  background-color: white;
}

.user-head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 30rpx;
}

.user-info {
  width: auto;
  height: 180rpx;
  flex: 1;
}

.user-name {
  float: left;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 12pt;
  margin-top: 13rpx;
}

.user-introduce {
  float: left;
  width: 100%;
  min-height: 80rpx;
  font-size: 10pt;
  color: #666;
}

.content2 {
  width: 100%;
  min-height: 180rpx;
  padding-top: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.xm-pic {
  float: left;
  width: 200px;
  height: 100px;
}

.content3 {
  float:left;
  width: 100%;
  min-height: 100rpx;
  background-color: white;
  color: #444;
  font-size: 10pt;
  padding-top: 20rpx;
}

.xm-pic-box {
  width: auto;
  height: 100px;
}

.pic {
  flex: 1;
  margin: 16rpx 16rpx auto 16rpx;
}

.introduce {
  min-height: 50rpx;
