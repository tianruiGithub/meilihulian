      <image wx:if="{{chooseJike!=0}}" class="IconJiu" src="{{urlPath}}jiClick.png"></image>
      <text wx:if="{{chooseJike!=0}}" style="color:#576b95;">极客</text>
    </view>
    <view bindtap="chooseJinke" class="jiuke">
