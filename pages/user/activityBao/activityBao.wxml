    </view>
    <view bindtap="chooseZhike" class="jiuke">
      <image wx:if="{{chooseZhike ==0}}" class="IconJiu" src="{{urlPath}}zhi.png"></image>
      <text wx:if="{{chooseZhike ==0}}">智客</text>
